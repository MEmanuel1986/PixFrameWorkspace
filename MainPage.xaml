<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="PixFrameWorkspace.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PixFrameWorkspace"
             Title="Kundenverwaltung">

    <Grid ColumnDefinitions="400,*,200" ColumnSpacing="10" RowDefinitions="*,Auto">

        <!-- LINKE SPALTE: Suchfeld und Kundenliste -->
        <Grid Grid.Column="0" Grid.Row="0" RowDefinitions="Auto,Auto,*,Auto" RowSpacing="10" Padding="10">

            <!-- Suchleiste -->
            <VerticalStackLayout Grid.Row="0" Spacing="5">
                <Label Text="Kunden suchen:" FontSize="16" FontAttributes="Bold" />
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="5">
                    <Entry x:Name="SearchEntry" 
                           Placeholder="Name, Firma, Ort..." 
                           TextChanged="OnSearchTextChanged"
                           Grid.Column="0" />
                    <Button Text="X" 
                            Clicked="OnClearSearchClicked"
                            Grid.Column="1"
                            WidthRequest="40"
                            BackgroundColor="LightGray" />
                </Grid>
            </VerticalStackLayout>

            <!-- Kundenanzahl -->
            <Label x:Name="CustomerCountLabel" 
                   Grid.Row="1"
                   Text="0 Kunden gefunden" 
                   FontSize="12" 
                   TextColor="Gray" />

            <!-- Kundenliste -->
            <VerticalStackLayout Grid.Row="2" Spacing="5">
                <Label Text="Kundenliste:" FontSize="16" FontAttributes="Bold" />

                <ListView x:Name="CustomersListView"
                          ItemsSource="{Binding Customers}"
                          SelectionMode="Single"
                          ItemSelected="OnCustomerSelected"
                          HasUnevenRows="True"
                          BackgroundColor="White"
                          VerticalOptions="FillAndExpand"
                          Margin="0,5,0,0">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:Customer">
                            <ViewCell>
                                <Grid Padding="10" ColumnDefinitions="Auto,*" ColumnSpacing="10" BackgroundColor="White">
                                    <VerticalStackLayout Grid.Column="1">
                                        <Label Text="{Binding DisplayName}" 
                                               FontSize="14" 
                                               LineBreakMode="TailTruncation" />
                                        <Label Text="{Binding FullAddress}" 
                                               FontSize="12" 
                                               TextColor="Gray"
                                               LineBreakMode="TailTruncation" />
                                        <Label Text="{Binding Email}" 
                                               FontSize="12" 
                                               TextColor="Gray"
                                               LineBreakMode="TailTruncation" />
                                    </VerticalStackLayout>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </VerticalStackLayout>

            <!-- Statusinformation unten -->
            <Label Grid.Row="3"
                   Text="💡 Tipp: Klicken Sie auf einen Kunden zum Bearbeiten"
                   FontSize="12"
                   TextColor="Gray"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0" />

        </Grid>

        <!-- MITTLERE SPALTE: Eingabe- und Anzeigefelder -->
        <ScrollView Grid.Column="1" Grid.Row="0">
            <VerticalStackLayout Spacing="12" Padding="15" VerticalOptions="Start">

                <!-- Kundennummer -->
                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10" VerticalOptions="Center">
                    <Label Text="Kundennummer:"
                           FontSize="14"
                           FontAttributes="Bold"
                           VerticalOptions="Center"
                           Grid.Column="0" />
                    <Label x:Name="CustomerNumberLabel"
                           Text="1000"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="DarkBlue"
                           VerticalOptions="Center"
                           Grid.Column="1" />
                </Grid>

                <!-- Persönliche Daten -->
                <Frame BackgroundColor="#F8F9FA" Padding="12" HasShadow="False">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Persönliche Daten" FontSize="12" FontAttributes="Bold" />

                        <Grid ColumnDefinitions="*,*" ColumnSpacing="8">
                            <VerticalStackLayout Grid.Column="0" Spacing="4">
                                <Label Text="Vorname *" FontSize="12" />
                                <Entry x:Name="FirstNameEntry" 
                                       Placeholder="Vorname..." 
                                       FontSize="12"
                                       HeightRequest="36" />
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1" Spacing="4">
                                <Label Text="Nachname *" FontSize="12" />
                                <Entry x:Name="LastNameEntry" 
                                       Placeholder="Nachname..." 
                                       FontSize="14"
                                       HeightRequest="36" />
                            </VerticalStackLayout>
                        </Grid>

                        <VerticalStackLayout Spacing="4">
                            <Label Text="Firmenname (optional)" FontSize="12" />
                            <Entry x:Name="CompanyEntry" 
                                   Placeholder="Firmenname..." 
                                   FontSize="12"
                                   HeightRequest="36" />
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- Kontaktdaten -->
                <Frame BackgroundColor="#F8F9FA" Padding="12" HasShadow="False">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Kontaktdaten" FontSize="12" FontAttributes="Bold" />

                        <Grid ColumnDefinitions="*,*" ColumnSpacing="8">
                            <VerticalStackLayout Grid.Column="0" Spacing="4">
                                <Label Text="E-Mail *" FontSize="12" />
                                <Entry x:Name="EmailEntry" 
                                       Placeholder="E-Mail..."
                                       Keyboard="Email"
                                       FontSize="12"
                                       HeightRequest="36" />
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1" Spacing="4">
                                <Label Text="Telefon *" FontSize="12" />
                                <Entry x:Name="PhoneEntry" 
                                       Placeholder="Telefon..."
                                       Keyboard="Telephone"
                                       FontSize="12"
                                       HeightRequest="36" />
                            </VerticalStackLayout>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- Adresse -->
                <Frame BackgroundColor="#F8F9FA" Padding="12" HasShadow="False">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Adresse" FontSize="12" FontAttributes="Bold" />

                        <Grid ColumnDefinitions="2*,*" ColumnSpacing="8">
                            <VerticalStackLayout Grid.Column="0" Spacing="4">
                                <Label Text="Straße *" FontSize="12" />
                                <Entry x:Name="StreetEntry" 
                                       Placeholder="Straße..."
                                       FontSize="12"
                                       HeightRequest="36" />
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1" Spacing="4">
                                <Label Text="Hausnummer *" FontSize="12" />
                                <Entry x:Name="HouseNumberEntry" 
                                       Placeholder="Hausnr."
                                       FontSize="12"
                                       HeightRequest="36" />
                            </VerticalStackLayout>
                        </Grid>

                        <Grid ColumnDefinitions="*,2*" ColumnSpacing="8">
                            <VerticalStackLayout Grid.Column="0" Spacing="4">
                                <Label Text="PLZ *" FontSize="12" />
                                <Entry x:Name="ZipCodeEntry" 
                                       Placeholder="PLZ"
                                       Keyboard="Numeric"
                                       FontSize="12"
                                       HeightRequest="36" />
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1" Spacing="4">
                                <Label Text="Ort *" FontSize="12" />
                                <Entry x:Name="CityEntry" 
                                       Placeholder="Ort"
                                       FontSize="12"
                                       HeightRequest="36" />
                            </VerticalStackLayout>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- Umsatzsteuer-ID -->
                <Frame BackgroundColor="#F8F9FA" Padding="12" HasShadow="False">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Weitere Informationen" FontSize="12" FontAttributes="Bold" />

                        <VerticalStackLayout Spacing="4">
                            <Label Text="Umsatzsteuer-ID (optional)" FontSize="12" />
                            <Entry x:Name="VatIdEntry" 
                                   Placeholder="USt-ID..."
                                   FontSize="12"
                                   HeightRequest="36" />
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>

        <!-- RECHTE SPALTE: Buttons -->
        <VerticalStackLayout Grid.Column="2" Grid.Row="0" Spacing="15" Padding="15,20">

            <!-- Hauptaktionen -->
            <Frame BackgroundColor="#FFFFFF" Padding="12" HasShadow="False">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Kunden-Aktionen" 
                           FontSize="14" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center" />

                    <Button x:Name="SaveButton" 
                            Text="Speichern" 
                            Clicked="OnSaveButtonClicked"
                            BackgroundColor="#607D8B"
                            TextColor="White"
                            HeightRequest="40"
                            FontSize="13"
                            CornerRadius="5" />

                    <Button x:Name="ClearButton" 
                            Text="Neuer Kunde" 
                            Clicked="OnClearButtonClicked"
                            BackgroundColor="#607D8B"
                            TextColor="White"
                            HeightRequest="40"
                            FontSize="13"
                            CornerRadius="5" />

                    <Button x:Name="OpenFolderButton" 
                            Text="Kunden-Ordner" 
                            Clicked="OnOpenFolderButtonClicked"
                            BackgroundColor="#607D8B"
                            TextColor="White"
                            HeightRequest="40"
                            FontSize="13"
                            CornerRadius="5"
                            IsEnabled="False" />

                    <!-- NEUER PROJEKTE BUTTON -->
                    <Button x:Name="ProjectsButton" 
                            Text="Projekte" 
                            Clicked="OnProjectsButtonClicked"
                            BackgroundColor="#607D8B"
                            TextColor="White"
                            HeightRequest="40"
                            FontSize="13"
                            CornerRadius="5" />
                </VerticalStackLayout>
            </Frame>

            <!-- Einstellungen -->
            <Frame BackgroundColor="#F5F5F5" Padding="12" HasShadow="False">
                <VerticalStackLayout Spacing="10">
                    <Button x:Name="SettingsButton" 
                            Text="Einstellungen" 
                            Clicked="OnSettingsButtonClicked"
                            BackgroundColor="#607D8B"
                            TextColor="White"
                            HeightRequest="40"
                            FontSize="13"
                            CornerRadius="5" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>

        <!-- UNTERE LEISTE: Status -->
        <Grid Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" 
              Padding="20,10" BackgroundColor="#F5F5F5">
            <Label x:Name="StatusLabel"
                   Text="Bitte Daten eingeben"
                   FontSize="14"
                   VerticalOptions="Center"
                   HorizontalOptions="Center" />
        </Grid>

    </Grid>
</ContentPage>