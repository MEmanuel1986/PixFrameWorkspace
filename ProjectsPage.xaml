<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="PixFrameWorkspace.ProjectsPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Projekte">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Header -->
        <Grid Grid.Row="0" Padding="15" BackgroundColor="#F5F5F5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" 
                    Text="? Zurück" 
                    Clicked="OnBackButtonClicked"
                    BackgroundColor="Transparent"
                    TextColor="#3498DB" />

            <Label Grid.Column="1" 
                   Text="Projekte" 
                   FontSize="20" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" />

            <Button Grid.Column="2" 
                    Text="Neues Projekt" 
                    Clicked="OnNewProjectClicked"
                    BackgroundColor="#27AE60"
                    TextColor="White" />
        </Grid>

        <!-- Projekte Liste -->
        <CollectionView x:Name="ProjectsCollectionView"
                       Grid.Row="1"
                       SelectionMode="Single"
                       SelectionChanged="OnProjectSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="15" ColumnDefinitions="Auto,*,Auto">

                        <Frame Grid.Column="0" 
                               BackgroundColor="#3498DB" 
                               Padding="10"
                               HeightRequest="40"
                               WidthRequest="40"
                               CornerRadius="20"
                               HorizontalOptions="Center"
                               VerticalOptions="Center">
                            <Label Text="??" 
                                   FontSize="16"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Frame>

                        <VerticalStackLayout Grid.Column="1" Padding="10,0">
                            <Label Text="{Binding ProjectName}" 
                                   FontSize="16" 
                                   FontAttributes="Bold" />
                            <Label Text="{Binding Description}" 
                                   FontSize="12" 
                                   TextColor="Gray"
                                   LineBreakMode="TailTruncation" />
                            <Label Text="{Binding Status}" 
                                   FontSize="11" 
                                   TextColor="{Binding Status, Converter={x:StaticResource StatusColorConverter}}" />
                        </VerticalStackLayout>

                        <Label Grid.Column="2" 
                               Text="?" 
                               FontSize="16"
                               TextColor="Gray"
                               VerticalOptions="Center" />

                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Status -->
        <Label x:Name="StatusLabel"
               Grid.Row="2"
               Text="Keine Projekte vorhanden"
               FontSize="14"
               HorizontalOptions="Center"
               Padding="10" />

    </Grid>

</ContentPage>