<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="PixFrameWorkspace.ProjectDetailPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Projekt">

    <ContentPage.Resources>
        <x:Array x:Key="StatusOptions" Type="{x:Type x:String}">
            <x:String>Aktiv</x:String>
            <x:String>Abgeschlossen</x:String>
            <x:String>Pausiert</x:String>
        </x:Array>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">

            <!-- Projekt Informationen -->
            <Frame BackgroundColor="#F8F9FA" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Projektinformationen" FontSize="16" FontAttributes="Bold" />

                    <Entry x:Name="ProjectNameEntry" Placeholder="Projektname *" />
                    <Entry x:Name="DescriptionEntry" Placeholder="Beschreibung" />

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <DatePicker x:Name="DeadlineDatePicker" 
                                   Grid.Column="0"
                                   Format="dd.MM.yyyy" />
                        <Picker x:Name="StatusPicker" 
                               Grid.Column="1"
                               ItemsSource="{StaticResource StatusOptions}" />
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Notizen -->
            <Frame BackgroundColor="#F0F8FF" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Projektnotizen" FontSize="16" FontAttributes="Bold" />
                    <Editor x:Name="NotesEditor" 
                           HeightRequest="100" 
                           Placeholder="Notizen zum Projekt..." />
                </VerticalStackLayout>
            </Frame>

            <!-- Datei-Management -->
            <Frame BackgroundColor="#E8F5E8" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Projektdateien" FontSize="16" FontAttributes="Bold" />

                    <Button Text="Verträge hinzufügen" 
                           Clicked="OnAddContractClicked"
                           BackgroundColor="Transparent"
                           HorizontalOptions="Start" />

                    <Button Text="Rechnungen hinzufügen" 
                           Clicked="OnAddInvoiceClicked"
                           BackgroundColor="Transparent"
                           HorizontalOptions="Start" />

                    <Button Text="Bilder hinzufügen" 
                           Clicked="OnAddImageClicked"
                           BackgroundColor="Transparent"
                           HorizontalOptions="Start" />

                    <Button Text="Videos hinzufügen" 
                           Clicked="OnAddVideoClicked"
                           BackgroundColor="Transparent"
                           HorizontalOptions="Start" />

                    <Button Text="Projektordner öffnen" 
                           Clicked="OnOpenProjectFolderClicked"
                           BackgroundColor="#3498DB"
                           TextColor="White" />
                </VerticalStackLayout>
            </Frame>

            <!-- Speichern Button -->
            <Button x:Name="SaveButton" 
                   Text="Projekt speichern" 
                   Clicked="OnSaveProjectClicked"
                   BackgroundColor="#27AE60"
                   TextColor="White"
                   HeightRequest="50" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>